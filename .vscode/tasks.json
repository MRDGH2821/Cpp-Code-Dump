{
  "tasks": [
    {
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/out/${fileBasenameNoExtension}"
      ],
      "command": "/usr/bin/gcc-10",
      "detail": "Task generated by Debugger.",
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "label": "C/C++: gcc-10 build active file",
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "type": "cppbuild"
    },
    {
      "command": ["${workspaceFolder}/out/${fileBasenameNoExtension}"],
      "dependsOn": ["C/C++: gcc-10 build active file"],
      "dependsOrder": "sequence",
      "detail": "Run C/C++ file",
      "group": {
        "isDefault": true,
        "kind": "none"
      },
      "label": "C/C++: run file",
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "type": "shell"
    },
    {
      "dependsOrder": "sequence",
      "detail": "Formats the file with Astyle.",
      "group": {
        "isDefault": true,
        "kind": "none"
      },
      "label": "Format file with Astyle",
      "linux": {
        "args": [
          "--style=google",
          "--indent=spaces=2",
          "--indent-classes",
          "--indent-modifiers",
          "--indent-switches",
          "--indent-cases",
          "--indent-namespaces",
          "--indent-preproc-block",
          "--indent-col1-comments",
          "--min-conditional-indent=2",
          "--break-blocks=all",
          "--delete-empty-lines",
          "--break-one-line-headers",
          "--fill-empty-lines",
          "--suffix=none",
          "--add-braces",
          "--attach-return-type",
          "--mode=c",
          "--lineend=linux",
          "\"${file}\""
        ],
        "command": "astyle"
      },
      "type": "shell"
    },
    {
      "dependsOrder": "sequence",
      "detail": "Formats the file with Clang Tidy.",
      "group": {
        "isDefault": true,
        "kind": "none"
      },
      "label": "Format file with Clang Tidy",
      "linux": {
        "args": [
          "-p",
          "${workspaceFolder}/build",
          "--fix",
          "--fix-errors",
          "${file}"
        ],
        "command": "clang-tidy"
      },
      "type": "shell"
    },
    {
      "dependsOrder": "sequence",
      "detail": "Formats the file with Clang Format.",
      "group": {
        "isDefault": true,
        "kind": "none"
      },
      "label": "Format file with Clang Format",
      "linux": {
        "args": ["-i", "${file}"],
        "command": "clang-format"
      },
      "type": "shell"
    },
    {
      "dependsOn": [
        "Format file with Astyle",
        "Format file with Clang Tidy",
        "Format file with Clang Format"
      ],
      "dependsOrder": "sequence",
      "detail": "Formats the file with Astyle, Clang Tidy and Clang Format.",
      "group": {
        "isDefault": true,
        "kind": "none"
      },
      "label": "Format file",
      "problemMatcher": [],
      "type": "shell"
    },
    {
      "command": "npx -y mega-linter-runner --flavor c_cpp",
      "detail": "Run Mega Linter on the workspace",
      "group": "none",
      "label": "Mega lint",
      "problemMatcher": [],
      "type": "shell"
    }
  ],
  "version": "2.0.0"
}
